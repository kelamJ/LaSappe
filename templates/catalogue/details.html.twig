{% extends 'base.html.twig' %}

{% block title %}Détail produit{% endblock %}

{% block body %}
    <div class="product-content">
        <div class="container pt-5">
            <button class="button"><a href="{{ path('all_produits') }}" style="">Retour</a></button>
        </div>
        <div class="container">
            <div class="d-flex justify-content-center align-items-center">
                <div class="bg-image hover-overlay ripple mt-5 card-anim pe-5" style="width: 17rem; --color: #fff" data-mdb-ripple-color="light">
                    <div class="card mx-auto">
                        <img class="card-img-top" src="{{ asset('assets/uploads/produits/') ~ produit.image }}" alt="Card image">
                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                    </div>
                </div>
                <div class="">
                {% if produit.proStock > 0 %}
                    {#                            Bouton animer#}
                    <div data-tooltip="{{ produit.prixVente }} €" class="button-cart">
                        <div class="button-wrapper">
                            <div class="text">
                                <a href="{{ path('cart_add', {id: produit.id}) }}" class="">Ajouter</a>
                            </div>
                            <span class="icon">
                                        <svg viewBox="0 0 16 16" class="bi bi-cart2" fill="currentColor" height="16" width="16" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l1.25 5h8.22l1.25-5H3.14zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"></path>
                                        </svg>
                                    </span>
                        </div>
                    </div>
                    <div class="card-body rounded-bottom">
                        <h4 class="card-title">{{ produit.proNom }}</h4>
                        <p class="card-text">{{ produit.categorie.catNom }}</p>
                        <p class="card-text">{{ produit.proDescription }}</p>
                    </div>
                </div>

                {% else %}
                    <p class="text-danger">Temporairement en rupture de stock</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
