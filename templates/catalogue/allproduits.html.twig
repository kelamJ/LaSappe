{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container col-6">
        <div class="d-flex justify-content-center justify-content-around flex-wrap">
            {% for produits in produit %}
                <div class="d-flex  justify-content-center neumorphism-1 mb-5">
                    <div class="" style="">
                        <img src="/assets/uploads/produits/{{ produits.image }}" style="width: 12em" class="card-img-top" alt="...">
                        <div class="d-flex  justify-content-center">
                        </div>
                        <div class="d-flex justify-content-center">
                            <a href="{{ path('details', {slug: produits.slug}) }}"><button type="button" class="button">Consulter</button></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
