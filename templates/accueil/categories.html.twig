{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <div class="col-12">
        <h1 class="hover-effect" style="position: absolute; top: 40%; left: 50%; transform: translate(-50%, -50%); text-align: center; text-transform: uppercase;">
            <a style="color: white;" href="#">{{categorie.catNom}}</a></h1>
        {% if (categorie.catNom == "Homme")  %}
                <img class="card-img-top" src="/assets/uploads/categories/homme.jpg">
            {% else %}
                <img class="card-img-top" src="/assets/uploads/categories/femme.jpg">
        {% endif %}


        <div class="d-flex justify-content-center">
            {% for souscategorie in categorie.categories %}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card" style="">
                        <img src="/assets/uploads/categories/{{ souscategorie.catImage }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{souscategorie.catNom}}</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
{#                            <a href="{{ path('app_produits', { categorie: souscategorie.id})  }}" class="btn btn-primary">Go somewhere</a>#}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
